{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run MultiStreamViewer",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/MultiStreamViewer/MultiStreamViewer.csproj"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Watch MultiStreamViewer (Hot Reload)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"--project",
				"${workspaceFolder}/MultiStreamViewer/MultiStreamViewer.csproj"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": []
		}
	]
}